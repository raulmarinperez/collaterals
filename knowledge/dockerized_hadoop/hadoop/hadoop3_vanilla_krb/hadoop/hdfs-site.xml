<configuration>
    <!-- Secure mode setup - Kerberos configuration parameters -->
    <property>
        <name>dfs.block.access.token.enable</name>
        <value>true</value>
    </property>
    <property>
        <name>dfs.namenode.kerberos.principal</name>
        <value>nn/hadoop.krb.test@QUEEN.KRB.TEST</value>
    </property>
    <property>
        <name>dfs.namenode.keytab.file</name>
        <value>/etc/security/keytab/nn.service.keytab</value>
    </property>
    <property>
        <name>dfs.web.authentication.kerberos.principal</name>
        <value>HTTP/hadoop.krb.test@QUEEN.KRB.TEST</value>
    </property>
    <property>
        <name>dfs.web.authentication.kerberos.keytab</name>
        <value>/etc/security/keytab/spnego.service.keytab</value>
    </property>
    <property>
        <name>dfs.secondary.namenode.kerberos.principal</name>
        <value>sn/hadoop.krb.test@QUEEN.KRB.TEST</value>
    </property>
    <property>
        <name>dfs.secondary.namenode.keytab.file</name>
        <value>/etc/security/keytab/sn.service.keytab</value>
    </property>
    <property>
        <name>dfs.datanode.kerberos.principal</name>
	<value>dn/hadoop.krb.test@QUEEN.KRB.TEST</value>
    </property>
    <property>
        <name>dfs.datanode.keytab.file</name>
	<value>/etc/security/keytab/dn.service.keytab</value>
    </property>
    <property>
        <name>dfs.datanode.data.dir.perm</name>
	<value>700</value>
    </property>
    <property>
        <name>dfs.datanode.address</name>
	<value>0.0.0.0:1004</value>
    </property>
    <property>
        <name>dfs.datanode.http.address</name>
	<value>0.0.0.0:1006</value>
    </property>

    <!-- Typical HDFS setup -->
    <property>
        <name>dfs.replication</name>
        <value>1</value>
    </property>
    <property>
        <name>dfs.namenode.name.dir</name>
        <value>file:///data/hdfs/namenode</value>
    </property>
    <property>
        <name>dfs.datanode.data.dir</name>
        <value>file:///data/hdfs/datanode</value>
    </property>
    <property>
        <name>dfs.namenode.http-address</name>
        <value>0.0.0.0:50070</value>
    </property>
</configuration>
